@model testweb.Models.Event
@{
    ViewBag.Title = "Signup";
}

<section id="four" class="wrapper style2 special">
    <div class="inner">
        <header class="major narrow">
            <h2>Sign Up</h2>
            <p>To join all interesting events!</p>
        </header>
        @using (Html.BeginForm("CreateEvent", "Event", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="container 75%">
                <div class="row uniform 50%">
                    <div class="12u$">
                        @Html.TextBoxFor(model => model.Title, new { placeHolder = "Event Title"})
                    </div>
                    <div class="12u$">
                        @Html.TextAreaFor(model => model.Description, new { placeHolder = "Event Description" })
                    </div>
                    <div class="12u$">
                        <input type="file" name="image" />
                    </div>
                </div>
            </div>
            <ul class="actions">
                <li><input type="submit" class="special" value="Create Event" /></li>
                <li><input type="reset" class="alt" value="Reset" /></li>
            </ul>
        }
    </div>
</section>