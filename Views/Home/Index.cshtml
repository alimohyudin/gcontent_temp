@{
    ViewBag.Title = "Home Page";
}

<!-- Banner -->
<section id="banner">
    <i class="icon fa-diamond"></i>
    <h2>Eventor is</h2>    
    <p>People getting together to learn something, <br />
            do something, share something…
			</p>
    <ul class="actions">
        <li><a href="./Event/AllEvents" class="button big special">Join Event</a></li>
